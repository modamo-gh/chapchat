generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Book {
    authors     String[]
    coverURL    String
    createdAt   DateTime @default(now())
    description String
    isbn        String   @id
    subtitle    String?
    title       String
    updatedAt   DateTime @updatedAt

    @@map("books")
}
